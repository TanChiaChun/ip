<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.nus.duke.view.MainWindow"
      prefHeight="550.0" prefWidth="390.0">
    <ScrollPane fx:id="scrollPane" VBox.vgrow="ALWAYS">
        <VBox fx:id="dialogContainer"/>
    </ScrollPane>
    <HBox>
        <VBox.margin>
            <Insets topRightBottomLeft="10"/>
        </VBox.margin>
        <TextField fx:id="userInput" HBox.hgrow="ALWAYS" style="-fx-padding: 8;" onAction="#handleUserInput">
            <HBox.margin>
                <Insets right="10"/>
            </HBox.margin>
        </TextField>
        <Button text="Send" style="-fx-padding: 8 15 8 15;" onAction="#handleUserInput"/>
    </HBox>
</VBox>
